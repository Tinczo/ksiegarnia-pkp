@model KsiegarniaPKP.Models.Ksiazka

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły książki</h1>

<div class="row">
    <!-- Kolumna dla obrazka -->
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ObrazekUrl))
        {
            <img src="@Url.Content(Model.ObrazekUrl)" alt="Obrazek książki" style="height:800px, width: auto;" class="img-fluid" />
        }
    </div>

    <div class="col-md-8">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Autor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Autor)
            </dd>
            <dt class="col-sm-2">
                Tytuł
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tytul)
            </dd>
            <dt class="col-sm-2">
                Rok wydania
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RokWydania)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Opis)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Opis)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cena)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cena)
            </dd>
        </dl>
        <div class="row justify-content-center">
            <div class="col-auto">
                <a class="btn btn-secondary" asp-action="Index" role="button">Powróć do listy książek</a>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id" role="button">Edytuj</a>
            </div>
        </div>
    </div>
</div>
