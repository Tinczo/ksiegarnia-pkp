@model KsiegarniaPKP.Models.Ksiazka

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuwanie książki z oferty</h1>

<h3>Jesteś pewny, że chcesz usunąć tę książkę?</h3>
<div class="row">
    <!-- Kolumna dla obrazka -->
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ObrazekUrl))
        {
            <img src="@Url.Content(Model.ObrazekUrl)" alt="Obrazek książki" style="height:800px, width: auto;" class="img-fluid" />
        }
    </div>

    <div class="col-md-8">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Autor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Autor)
            </dd>
            <dt class="col-sm-2">
                Tytuł
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tytul)
            </dd>
            <dt class="col-sm-2">
                Rok wydania
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RokWydania)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Opis)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Opis)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cena)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cena)
            </dd>
        </dl>
        <div class="row justify-content-center">
            <div class="col-auto">
                <form asp-action="Delete" method="post" class="form-inline">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Usuń" class="btn btn-danger mr-2" />
                    <a class="btn btn-secondary" asp-action="Index" role="button">Powróć do listy książek</a>
                </form>
            </div>
        </div>
    </div>
</div>