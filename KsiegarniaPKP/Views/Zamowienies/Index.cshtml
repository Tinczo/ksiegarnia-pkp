@model IEnumerable<KsiegarniaPKP.Models.Zamowienie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dostawa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Klient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pracownik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dokument)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrZamowienia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dostawa.Adres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Klient.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pracownik.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dokument.Nabywca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrZamowienia)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
